@using System.Configuration;
@{
    string staticSiteUrl = ConfigurationManager.AppSettings["StaticSiteUrl"];
    string jQueryUrl = ConfigurationManager.AppSettings["JQueryUrl"];
    string jQueryUIUrl = ConfigurationManager.AppSettings["JQueryUIUrl"];
    string jQueryUISmoothnessUrl = ConfigurationManager.AppSettings["JQueryUISmoothnessUrl"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render(jQueryUISmoothnessUrl)
    @Styles.Render(staticSiteUrl + "/WebControls/2.0/CSS/WebControls.min.css")
    @Styles.Render("~/Content/css")
</head>
<body>
    @RenderBody()

    @Scripts.Render(jQueryUrl)
    @Scripts.Render(jQueryUIUrl)
    @Scripts.Render(staticSiteUrl + "/WebControls/2.0/Javascript/WebControls.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
